<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.newbies.myapplication">

    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!-- 向SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.OpenAnimation"
            android:alwaysRetainTaskState="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activity.WebViewActivty"
            />
        <activity
            android:name=".activity.StudyRecordActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activity.SkillTreeActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activity.studyActivity.HuffmanActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activity.studyActivity.PokerGameActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activity.studyActivity.CoinActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activity.studyActivity.JDCShowActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activity.studyActivity.FarmerCrossRiverActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".activity.studyActivity.MazeActivity"
            android:launchMode="singleTask"/>
    </application>

</manifest>